@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<h1 style="color:#F5821E"> Welcome to Cinemas View</h1>
<div class="row" style="color: white; border: 2px solid  #F5821E;padding:1rem;">
    <div class="col-md-8 offset-md-2">

        <table class="table" style="color:white;">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle" style="margin:20px;">

                            <a class=" btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> </a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                            {
                                <a class=" btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> </a>
                                   
                                <a class=" btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

