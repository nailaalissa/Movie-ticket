
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_ticket</title>
    <link rel="stylesheet" href="path/to/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_ticket.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   
  
</head>
   
<body style="background-color:black"> 
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow" style="background-color:black;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Movies" asp-action="Index" style="color:white;">
                    <img src="/images/logo.jpg" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="color:white;">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index" style="color:white;"><i class="bi bi-film"></i> Movies</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:white;">
                                <i class="bi bi-gear"></i> Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color:black;">
                                <a class="dropdown-item" asp-controller="Cinemas" asp-action="Index" style="color:white;"><i class="bi bi-camera-reels"></i> Cinemas</a>
                                <a class="dropdown-item" asp-controller="Producers" asp-action="Index" style="color:white;"><i class="bi bi-headset"></i> Producers</a>
                                <a class="dropdown-item" asp-controller="Actors" asp-action="Index" style="color:white;"><i class="bi bi-person-square"></i> Actors</a>
                            </div>
                        </li>
                    </ul>
                  
                 

                </div>
         

               

                <partial name="_LoginPartial" style="color:white;" />

                <a asp-controller="Orders" asp-action="AddItemToShoppingCart" style="color: white; text-decoration: none; position: relative; margin-left:10px;">
                    <i class="bi bi-cart cart-icon" style="font-size: 1.5rem; color: white;"></i>
                    <span id="cartItemCount" style="color: orange; font-weight: bold; position: absolute; top: -8px; right: -8px; border-radius: 50%; padding: 4px 8px;"></span>
                </a>
              
            </div>
          



        </nav>
    </header>

    <div class="container">
       
        <main role="main" class="pb-3" style="background-color:black; opacity:revert-layer; margin-top:2rem;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - E_ticket
        </div>
    </footer>
